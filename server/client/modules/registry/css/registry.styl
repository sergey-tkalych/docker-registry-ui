body, .app-content
	background rgb(250,250,250)
.text-gray
	color gray
.app-shadow
	box-shadow 0 0 1px 1px rgba(0, 0, 0, 0.14), 0 0 2px 2px rgba(0, 0, 0, 0.098), 0 0 5px 1px rgba(0, 0, 0, 0.084)
.app-content-toolbar
	background #f6f6f6!important
	color #000!important
	.md-breadcrumb
		a
			margin-right 10px
		a.link
			cursor pointer
		a.link:hover
			text-decoration underline
.repository-tags
	.tag
		background rgb(224,224,224)
		color rgb(66,66,66)
		cursor pointer
		border-radius 16px
		display block
		height 32px
		line-height 32px
		margin 8px 8px 0 0
		padding 0 32px 0 12px
		float left
		box-sizing border-box
		max-width 100%
		position relative
		outline none
		white-space nowrap
		text-overflow ellipsis
		overflow hidden
		button
			margin 0
			padding 0
			height 32px
			width 32px
			position absolute
			top 0
			right 0
			border-radius 16px
	.tag.selected
		background rgb(255,87,34)
		color #fff
	.tag.deleted
		padding-right 12px
		background #F7F3F3
		color #D0CCCC
		pointer-events none
		button
			display none
.repository-subheader
	.md-subheader-inner
		padding 20px 0
		height 100%
	.md-subheader-content
		height 100%
		display flex
		justify-content center
		align-items center
	p
		margin 0
		line-height 24px
		font-size 24px
		text-align center
		transition .5s
.md-subheader-wrapper[sticky-state=active]
	.repository-subheader
		p
			line-height 18px
			font-size 18px
.md-subheader-wrapper:not(.md-sticky-no-effect).md-sticky-clone
	z-index 3